.**********************************************************************
.*-------+---------+---------+---------+---------+---------+---------+*
         MACRO
&ZID     ZAUTH &ID,&PCREG=14
.*
         COPY  ZZGBL
.*
         AIF   ('&ID' EQ 'ON').AUTHON
         AIF   ('&ID' EQ 'OFF').AUTHOFF
         AGO   .ERR01
.*
.AUTHON  ANOP  ,
         LAE   0,1                     .authorize request
         AGO   .AUTH99
.*
.AUTHOFF ANOP  ,
         LAE   0,2                     .unauthorize request
.*
.AUTH99  ANOP  ,
         LAE   15,&AUTH                .PCID
         ZZMAC GEN=XPC                 .XPCSRV PC router
         MEXIT ,
.*
.**      Macro Notes
.*
.ERR01   MNOTE 8,'*** ZAUTH - Invalid authorization request specified'
         MEND
